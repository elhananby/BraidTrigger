    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--opto",
                "--highspeed",
                "--static",
                "--debug"
            ]
        },
        {
            "name": "visual_stimuli.py",
            "type": "debugpy",
            "request": "launch",
            "program": "./modules/visual_stimuli.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "./params.toml",
            ]
        },
        {
            "name": "ximea camera app debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/buchsbaum/src/BraidTrigger/utils/ximea_camera_cpp/ximea-camera-test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/home/buchsbaum/src/BraidTrigger/utils/ximea_camera_cpp/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
